---
interface Props {
  courseCategoryName: string;
  courseSubPageLink: string;
}

const { courseCategoryName = "", courseSubPageLink = "" } = Astro.props;
---

<section class="w-full mb-24">
  <h2
    class="text-center text-font-color-sec text-3xl md:text-5xl font-extrabold mb-10"
  >
    {courseCategoryName} Courses
  </h2>

  <div class="swiper-container course-carousel-container">
    <div style="transform: translateX(0)" class="swiper-wrapper">
      <slot />
    </div>
  </div>

  <div class="w-full flex flex-row justify-center items-center gap-5">
    <button
      class="swiper-button-prev carousel-prevBtn"
      aria-label="Scroll To Previous Course"
    >
      <!-- <i class="fa-solid fa-circle-left"></i> -->
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 512 512"
        class="util-icon"
        fill="currentColor"
        stroke="currentColor"
        stroke-width="5"
        aria-hidden="true"
      >
        <path
          d="M512 256A256 256 0 1 0 0 256a256 256 0 1 0 512 0zM116.7 244.7l112-112c4.6-4.6 11.5-5.9 17.4-3.5s9.9 8.3 9.9 14.8l0 64 96 0c17.7 0 32 14.3 32 32l0 32c0 17.7-14.3 32-32 32l-96 0 0 64c0 6.5-3.9 12.3-9.9 14.8s-12.9 1.1-17.4-3.5l-112-112c-6.2-6.2-6.2-16.4 0-22.6z"
        ></path></svg
      >
    </button>

    <div class="swiper-scrollbar"></div>

    <button
      class="swiper-button-next carousel-nextBtn"
      aria-label="Scroll To Next Course"
    >
      <!-- <i class="fa-solid fa-circle-right"></i> -->
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 512 512"
        class="util-icon"
        fill="currentColor"
        stroke="currentColor"
        stroke-width="5"
        aria-hidden="true"
      >
        <path
          d="M0 256a256 256 0 1 0 512 0A256 256 0 1 0 0 256zm395.3 11.3l-112 112c-4.6 4.6-11.5 5.9-17.4 3.5s-9.9-8.3-9.9-14.8l0-64-96 0c-17.7 0-32-14.3-32-32l0-32c0-17.7 14.3-32 32-32l96 0 0-64c0-6.5 3.9-12.3 9.9-14.8s12.9-1.1 17.4 3.5l112 112c6.2 6.2 6.2 16.4 0 22.6z"
        ></path></svg
      >
    </button>
  </div>

  <div class="flex justify-center w-full">
    <a href=`/courses/${courseSubPageLink}/` class="view-all-btn">View All</a>
  </div>
</section>
