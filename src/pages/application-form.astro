---
import BaseLayout from "../layouts/BaseLayout.astro";
import FormArrow from "../components/FormArrow.astro";

const metadata = {
  title: "Application Form - V.Vidhya | For Best Computer Education in Surat",
  description:
    "Get in touch with V.Vidhya for the best computer education in Surat. Visit our institute, call us, or drop a message to learn more about offered courses.",
};
---

<BaseLayout metadata={metadata} navSection="application-form">
  <main class="my-20">
    <section
      class="flex flex-col items-center justify-center gap-3 mx-auto mb-24 max-w-mdsm md:max-w-2xl lg:max-w-4xl 2xl:max-w-6xl"
    >
      <h2
        class="text-center text-font-color-sec text-[34px] md:text-5xl font-extrabold"
      >
        Welcome
      </h2>

      <img
        src="/images/doodles/people-doing-partnership.svg"
        alt="an Illustration of a woman doing designing"
        class="ind-course-illus"
        decoding="async"
      />
    </section>

    <div
      class="mx-auto mb-24 w-full px-7 xs:px-0 xs:max-w-[420px] sm:max-w-lg md:max-w-2xl lg:max-w-4xl 2xl:max-w-5xl"
    >
      <h2 class="text-center contact-section-heading mt-3 mb-9">
        Application Form
      </h2>

      <form
        name="contact"
        method="POST"
        action="/api/submit-app-form"
        id="form"
        action="_blank"
        autocomplete="off"
        novalidate
        class="flex flex-col items-center justify-center gap-20 mx-auto py-10 md:py-20 border-solid border-2 border-b-6 rounded-xl bg-navbar-color-pri"
      >
        <fieldset class="form-fieldset">
          <legend class="app-form-legend">Personal Details</legend>

          <div class="flex flex-col w-4/5">
            <label class="form-label"
              >Full Name <span class="form-req-label">*</span></label
            >

            <div class="flex flex-col gap-3">
              <div class="w-full form-field">
                <label class="form-sublabel">First Name</label>
                <input
                  id="first-name"
                  name="first-name"
                  class="form-fieldbox"
                  type="text"
                  placeholder="Enter your first name"
                  required
                />
                <div class="error text-font-color-red-dark"></div>
              </div>

              <div class="w-full form-field">
                <label class="form-sublabel">Middle Name</label>
                <input
                  id="middle-name"
                  name="middle-name"
                  class="form-fieldbox"
                  type="text"
                  placeholder="Enter your middle name (i.e. father's or mother's name)"
                />
                <div class="error text-font-color-red-dark"></div>
              </div>

              <div class="w-full form-field">
                <label class="form-sublabel">Last Name</label>
                <input
                  id="last-name"
                  name="last-name"
                  class="form-fieldbox"
                  type="text"
                  placeholder="Enter your last name (i.e. surname)"
                />
                <div class="error text-font-color-red-dark"></div>
              </div>
            </div>

            <!-- <i class="fas fa-exclamation-circle failure-icon opacity-0"></i> -->
            <!-- <i class="far fa-check-circle success-icon opacity-0"></i> -->
          </div>

          <div class="flex flex-col w-4/5 form-field">
            <label for="age" class="form-label"
              >Age <span class="form-req-label">*</span></label
            >
            <input
              id="age"
              name="age"
              class="form-fieldbox"
              inputmode="numeric"
              type="number"
              placeholder="Enter your age"
              required
            />
            <!-- <i class="fas fa-exclamation-circle failure-icon opacity-0"></i> -->
            <!-- <i class="far fa-check-circle success-icon opacity-0"></i> -->
            <div class="error text-font-color-red-dark"></div>
          </div>

          <div class="flex flex-col w-4/5 form-field">
            <label for="dob" class="form-label"
              >Date of Birth <span class="form-req-label">*</span></label
            >

            <div class="flex flex-row gap-4" id="dob">
              <div class="flex flex-col w-1/3">
                <label for="age" class="form-sublabel">Day</label>
                <input
                  id="day-dob"
                  name="day-dob"
                  class="form-fieldbox"
                  inputmode="numeric"
                  type="number"
                  placeholder="Enter day"
                  required
