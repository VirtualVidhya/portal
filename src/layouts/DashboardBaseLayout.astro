---
import Head from "../components/Head.astro";
import ScrollUpBtn from "../components/Scroll-Up-Btn.astro";
import DashboardHeader from "../components/DashboardHeader.astro";
import DashboardFooter from "../components/DashboardFooter.astro";

interface Props {
  metadata: {
    title: string;
    description: string;
  };
  includeLottieAnimScript?: boolean;
  navSection: string;
}

const metadata = Astro.props.metadata;
const includeLottieAnimScript = Astro.props.includeLottieAnimScript ?? false;
const navSection = Astro.props.navSection ?? "none";
---

<!doctype html>
<html lang="en">
  <Head metadata={metadata} includeLottieAnimScript={includeLottieAnimScript} />

  <body
    class="bg-mainbg-color text-font-color-pri font-notosans flex flex-col min-h-screen"
  >
    <ScrollUpBtn />

    <DashboardHeader navSection={navSection} />

    <slot />

    <DashboardFooter />

    <slot name="specific-scripts-slot" />
  </body>
</html>
